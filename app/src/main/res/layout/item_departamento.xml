<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/pLigth">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fotoImageView"
                android:layout_width="60dp"
                android:layout_height="70dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/departamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="departamento"
                    android:textAllCaps="true"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/textTitleBig"/>
                <TextView
                    android:id="@+id/provincias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Municipios"
                    android:textAllCaps="true"
                    android:textColor="@color/secondaryText"
                    android:textSize="@dimen/textBody"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>